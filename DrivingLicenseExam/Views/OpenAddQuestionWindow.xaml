<Window x:Class="DrivingLicenseExam.Views.OpenAddQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrivingLicenseExam.Views"
        mc:Ignorable="d"
        Title="OpenAddQuestionWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
           Padding="12"
           BorderThickness="1"
           BorderBrush="#DDD"
           CornerRadius="6">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <TextBlock Text="THÔNG TIN CÂU HỎI"
                          FontWeight="Bold"
                          FontSize="14"
                          Margin="0,0,0,12"/>

                    <TextBlock Text="Nội dung"/>
                    <TextBox Text="{Binding Question.content, UpdateSourceTrigger=PropertyChanged}"
                        Height="60"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        Margin="0,0,0,8"/>

                    <TextBlock Text="Đáp án A"/>
                    <TextBox Text="{Binding Question.anSwerA}" Margin="0,0,0,6"/>

                    <TextBlock Text="Đáp án B"/>
                    <TextBox Text="{Binding Question.anSwerB}" Margin="0,0,0,6"/>

                    <TextBlock Text="Đáp án C"/>
                    <TextBox Text="{Binding Question.anSwerC}" Margin="0,0,0,6"/>

                    <TextBlock Text="Đáp án D"/>
                    <TextBox Text="{Binding Question.anSwerD}" Margin="0,0,0,8"/>

                    <TextBlock Text="Đáp án đúng"/>
                    <TextBox Text="{Binding Question.correctAnswer}"
                         Margin="0,0,0,8"/>

                    <CheckBox Content="Câu điểm liệt"
                         IsChecked="{Binding Question.isCritical}"
                         Margin="0,4,0,0"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
            <Button Height="22" Background="Green"  Width="50" Command="{Binding ConfirmCommand}">Xác nhận</Button>
            <Button Height="22" Width="50" Command="{Binding CancelCommand}">Hủy</Button>
        </StackPanel>

    </Grid>
</Window>
