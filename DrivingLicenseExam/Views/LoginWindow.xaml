<Window x:Class="DrivingLicenseExam.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DrivingLicenseExam.ViewModels"
        Title="Login"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid Background="Orange">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: LOGIN FORM -->
        <StackPanel Grid.Column="0"
                    Background="Coral"
                    Margin="40"
                    VerticalAlignment="Center">

            <TextBlock Text="Welcome Back!"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- EXAM CODE -->
            <TextBlock Text="Exam Code" FontWeight="SemiBold"/>
            <TextBox Height="30"
                     Margin="0,5,0,15"
                     Text="{Binding ExamCode, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- USERNAME -->
            <TextBlock Text="Username" FontWeight="SemiBold"/>
            <TextBox Height="30"
                     Margin="0,5,0,15"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- PASSWORD -->
            <TextBlock Text="Password" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PwdBox"
                         Height="30"
                         Margin="0,5,0,20"
                         PasswordChanged="PwdBox_PasswordChanged"/>

            <!-- LOGIN BUTTON -->
            <Button Content="Login"
                    Height="35"
                    Width="120"
                    HorizontalAlignment="Left"
                    Background="#FF007ACC"
                    Foreground="White"
                    Command="{Binding LoginCommand}"/>
        </StackPanel>

        <!-- RIGHT IMAGE -->
        <Border Grid.Column="1" Background="LightGray">
            <Image Source="pack://application:,,,/Resources/login.png"
                   Stretch="Fill"/>
        </Border>
    </Grid>
</Window>
