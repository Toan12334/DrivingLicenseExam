<Window
    x:Class="DrivingLicenseExam.Views.ExamManagementWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:DrivingLicenseExam.Views"
    mc:Ignorable="d"
    Title="ExamManagementWindow"
    Height="500"
    Width="800">

    <Grid>
        <TabControl>

            <!-- TAB: Quản lý bài thi -->
            <TabItem Header="Quản Lý Bài Thi">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Menu trái -->
                    <StackPanel
                        Grid.Column="0"
                        Background="#F5F5F5">

                        <TextBlock
                            Text="Quản lý"
                            FontWeight="Bold"
                            Margin="10" />

                        <Button
                            Content="Xem các câu hỏi bài thi"
                            Command="{Binding ViewQuestionsCommand }"
                            Margin="5" />

                        <Button
                            Content="Thêm mới bài thi"
                            Command="{Binding OpenAddCommand}"
                            Margin="5" />
                    </StackPanel>

                    <!-- Nội dung phải -->
                    <Grid Grid.Column="1">
                        <TextBlock
                            Text="Nội dung chi tiết"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" />

                        <DataGrid
                            ItemsSource="{Binding ExamList }"
                            SelectedItem="{Binding SelectedExam, Mode=TwoWay}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            GridLinesVisibility="All"
                            Margin="10">

                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    Header="ID"
                                    Binding="{Binding Id}"
                                    Width="60" />

                                <DataGridTextColumn
                                    Header="Tên"
                                    Binding="{Binding NameExam}"
                                    Width="*" />

                                <DataGridTextColumn
                                    Header="Giới hạn thời gian"
                                    Binding="{Binding TimeLimit}"
                                    Width="2*" />
                                <DataGridTextColumn
                                   Header="Tổng số câu hỏi"
                                   Binding="{Binding NumberQuestion}"
                                   Width="2*" />
                                <DataGridTextColumn
                                   Header="Mã Bài Thi"
                                   Binding="{Binding ExamCode}"
                                   Width="2*" />
                                <DataGridCheckBoxColumn
                                   Header="Trạng thái"
                                   Binding="{Binding IsActive}"
                                    Width="2*" />


                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- TAB: Cài đặt -->
            <TabItem Header="Cài đặt">
                <TextBlock
                    Text="Nội dung cài đặt"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" />
            </TabItem>

        </TabControl>
    </Grid>
</Window>
