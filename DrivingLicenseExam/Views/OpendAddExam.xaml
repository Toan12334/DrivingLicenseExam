<Window x:Class="DrivingLicenseExam.Views.OpendAddExam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrivingLicenseExam.Views"
        mc:Ignorable="d"
        Title="OpendAddExam" Height="450" Width="800">
    <Grid>
     
            <TextBlock Text="Thêm Bài Thi Mới" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <StackPanel Margin="20">
                <TextBlock Text="Tên Bài Thi:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <TextBox  Text="{Binding Exam.NameExam}" Height="30"/>
            <TextBlock Text="Mã bài thi :" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <TextBox  Text="{Binding Exam.ExamCode}" Height="30"/>
                
            <TextBlock Text="Thời gian làm bài:" Margin="0,10,0,5"/>
            <Slider Width="200"
               Minimum="0"
              Maximum="300"
              Value="{Binding TimeExam , Mode=TwoWay}" />
              
          

            
                <Button Content="Thêm Bài Thi" Width="100" Height="30" Margin="0,20,0,0" HorizontalAlignment="Center" Click="AddExamButton_Click"/>
            </StackPanel>
        
    </Grid>
</Window>
